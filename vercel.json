{
  "version": 2,
  "buildCommand": "npm run build && mkdir -p api && cp dist/index.js api/index.js",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
