# BlossomAI Environment Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# CORS Configuration (Required for production)
# =============================================================================

# Comma-separated list of allowed origins (frontend URLs)
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173

# Regex pattern for Vercel preview deployments (optional)
# Only used when VERCEL_ENV=preview
ALLOWED_ORIGIN_REGEX_PREVIEW=^https:\/\/.*\.vercel\.app$

# =============================================================================
# Demo Chat Configuration
# =============================================================================

# Enable AI chat functionality (default: 1 in dev, 0 in prod)
DEMO_AI=1

# Enable streaming responses (default: 1 in dev, 0 in prod)
AI_STREAM=1

# Persist chat data on server (default: 0)
DEMO_PERSIST_SERVER=0

# =============================================================================
# Live Data Provider Configuration
# =============================================================================

# Enable live price data from DefiLlama (default: 1)
LIVE_PRICES=1

# Enable live yield data from DefiLlama (default: 1)
LIVE_YIELDS=1

# Enable live TVL data from DefiLlama (default: 1)
LIVE_TVL=1

# Enable live risk scoring (default: 0 - uses mock data)
LIVE_RISK=0

# =============================================================================
# API Configuration
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Frontend API base URL (optional - defaults to same-origin)
# Only needed if API is on different domain
VITE_API_BASE=http://localhost:5050

# Development proxy mode (default: 1 for local dev)
# When enabled, uses Vite proxy to avoid CORS issues
VITE_DEV_PROXY=1

# Alerts auto-open feature flag (default: 1)
VITE_ALERTS_AUTO_OPEN_ANALYTICS=1

# Conversational layer polish (default: 1)
VITE_POLISH=1

# Demo wallet feature flag (default: 1 in dev)
VITE_DEMO_FUNDS=1

# Demo wallet seed amounts
VITE_DEMO_SEED_USDC=10000000   # 10M USDC
VITE_DEMO_SEED_SOL=2000        # for fees/UX (optional)

# Live price feeds
VITE_LIVE_PRICES=1
VITE_PRICE_TTL_SECONDS=15

# API Keys page (institutions)
VITE_API_KEYS=1

# CORS development flag (server-side)
ALLOW_ALL_DEV_ORIGINS=1

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable 403 error debugging (default: 0)
DEBUG_403=0

# Node environment (development/production)
NODE_ENV=development

# =============================================================================
# Vercel Deployment (auto-set by Vercel)
# =============================================================================

# Vercel environment (preview/production)
# VERCEL_ENV=preview

# =============================================================================
# Database (for future use)
# =============================================================================

# Database connection string
# DATABASE_URL=postgresql://user:pass@localhost:5432/blossomai

# =============================================================================
# External API Keys (for future use)
# =============================================================================

# DefiLlama API (no key required)
# DEFILLAMA_API_KEY=

# CoinGecko API (no key required for basic usage)
# COINGECKO_API_KEY=

# Supabase (for future authentication)
# SUPABASE_URL=
# SUPABASE_ANON_KEY=

